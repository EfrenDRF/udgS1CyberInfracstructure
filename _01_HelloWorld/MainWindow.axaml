<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="_01_HelloWorld.MainWindow"
        Title="_01_HelloWorld">
    
    <!-- Welcome to Avalonia! -->

    <StackPanel Margin="10">
        <TextBox Name="textPsw"     PasswordChar="*" Watermark="Password"/>
        <TextBox Name="textConfPws" PasswordChar="*" Watermark="Confirm Password"/>

        <Button  Name="buttonCheck" Click="button_Click">Check password</Button>
    </StackPanel>

</Window>
